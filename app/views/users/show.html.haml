- provide(:title, @user.name)
.row
  %aside.col-md-4
    %section.user_info
      %h1
        = gravatar_for @user
        = @user.name

%p#notice= notice
%p
  %strong Name:
  = @user.name
%p
  %strong Surname:
  = @user.surname
%p
  %strong Email:
  = @user.email
%p
  %strong Age:
  = @user.age
%p
  %strong Role:
  = @user.role
= link_to 'Edit', edit_user_path(@user)
|
= link_to 'Back', users_path
