- provide(:title, @user.name)
.row
  %aside.col-md-4
    %section.user_info
      %h1
        = gravatar_for @user
        %div
          = @user.name
        %div
          = @user.surname
      = image_tag('faixa_Branca.png', alt: 'White belt', class: 'belt')

%p#notice= notice
%div
  %p
    %span.glyphicon.glyphicon-envelope
    = @user.email
  -if @user.age.present?
    %p
      %span.glyphicon.glyphicon-gift
      = @user.age
  %p
    -case @user.role
    -when 'Branca'
      %span.glyphicon.glyphicon-pawn
      = @user.role
    -when 'Azul'
      %span.glyphicon.glyphicon-knight
      = @user.role
    -when 'Roxa'
      %span.glyphicon.glyphicon-bishop
      = @user.role
    -when 'Marrom'
      %span.glyphicon.glyphicon-tower
      = @user.role
    -when 'Preta'
      %span.glyphicon.glyphicon-queen
      = @user.role        
.form-actions
= link_to 'Back', users_path, class: 'btn btn-light btn-sm'
= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary btn-sm'
